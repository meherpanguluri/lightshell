---
interface Props {
  version: string;
}

const { version } = Astro.props;
---

<span class="since-badge">v{version}</span>

<style>
  .since-badge {
    display: inline-block;
    padding: 0.1em 0.45em;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    background: rgba(16, 185, 129, 0.15);
    color: #6ee7b7;
    border: 1px solid rgba(16, 185, 129, 0.3);
    vertical-align: middle;
    margin-left: 0.5rem;
  }
</style>
